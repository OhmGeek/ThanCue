<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.scene.layout.GridPane?>

<?import com.sun.javafx.scene.control.skin.TableHeaderRow?>
<?import com.sun.javafx.scene.control.skin.TableColumnHeader?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ThanCue.Controller"
            fx:id="anchor_pane">
    <children>
        <GridPane fx:id="grid_pane">
            <children>

                <MenuBar fx:id="menu_bar" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Menu text="Dev">
                        <items>
                            <MenuItem text="Print All Cues" fx:id="btnPrintCues"/>
                        </items>
                    </Menu>

                    <Menu text="File">
                        <items>
                            <MenuItem text="New" fx:id="btnNew"/>
                            <MenuItem text="Open" fx:id="btnOpen"/>
                            <MenuItem text="Save" fx:id="btnSave"/>
                            <MenuItem text="Save As" fx:id="btnSaveAs"/>
                            <MenuItem text="Exit" fx:id="btnExit"/>
                        </items>
                    </Menu>

                    <Menu text="Edit">
                        <items>
                            <MenuItem text="Undo" fx:id="btnUndo"/>
                            <MenuItem text="Redo" fx:id="btnRedo"/>
                        </items>
                    </Menu>
                </MenuBar>

                <HBox fx:id="hbxMoveButtonContainer" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Button fx:id="btnAddCue" text="Add cue"/>
                    <Button fx:id="btnEditCue" text="Edit cue"/>
                    <Button fx:id="btnMoveUp" text="Move up"/>
                    <Button fx:id="btnMoveDown" text="Move down"/>
                </HBox>

                <TableView fx:id="tblView" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Button text="Go" fx:id="btnGo" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

            </children>
        </GridPane>
    </children>
</AnchorPane>