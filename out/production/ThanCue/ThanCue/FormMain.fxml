<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ThanCue.Controller"
            fx:id="anchor_pane">
    <children>
        <GridPane fx:id="grid_pane">
            <children>
                <MenuBar GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Menu text="Dev">
                        <items>
                            <MenuItem fx:id="btnPrintCues" text="Print All Cues"/>
                        </items>
                    </Menu>

                    <Menu text="File">
                        <items>
                            <MenuItem fx:id="btnNew" text="New"/>
                            <MenuItem fx:id="btnOpen" text="Open"/>
                            <MenuItem fx:id="btnSave" text="Save"/>
                            <MenuItem fx:id="btnSaveAs" text="Save As"/>
                            <MenuItem fx:id="btnExit" text="Exit"/>
                        </items>
                    </Menu>

                    <Menu text="Edit">
                        <items>
                            <MenuItem fx:id="btnUndo" text="Undo"/>
                            <MenuItem fx:id="btnRedo" text="Redo"/>
                        </items>
                    </Menu>
                </MenuBar>

                <HBox GridPane.columnIndex="0" GridPane.rowIndex="1"> <!-- todo either here or in the controller class, make buttons size EQUALLY (currently is relational to the text contained in the button -->
                    <Button fx:id="btnAddCue" text="Add cue"/>
                    <Button fx:id="btnEditCue" text="Edit cue"/>
                    <Button fx:id="btnMoveUp" text="Move up"/>
                    <Button fx:id="btnMoveDown" text="Move down"/>
                </HBox>

                <TableView fx:id="tblView" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Button fx:id="btnGo" text="Go" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

            </children>
        </GridPane>
    </children>
</AnchorPane>