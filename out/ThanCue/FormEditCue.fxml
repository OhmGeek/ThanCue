<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ThanCue.FormEditCueController"
            fx:id="anchor_pane_form_edit_cue">
    <children>
        <GridPane fx:id="grid_pane_form_edit_cue" alignment="TOP_CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="25" right="25" bottom="10" left="25"/>
            </padding>

            <Label fx:id="lblCueInfo" text="null" GridPane.columnIndex="0" GridPane.columnSpan="2"
                   GridPane.rowIndex="0"/>

            <Label fx:id="lblCueType" text="Cue type" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="cmbCueType" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label fx:id="lblCueName" text="Cue name" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtCueName" text="No name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Button fx:id="btnSaveChanges" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Button fx:id="btnCancelChanges" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </children>
</AnchorPane>